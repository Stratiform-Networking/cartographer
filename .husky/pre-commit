#!/bin/sh
# Pre-commit hook for Cartographer
# This runs before each commit to ensure code quality

echo "Running code formatter..."
npm run format

if [ $? -ne 0 ]; then
  echo "❌ Format failed. Please fix formatting issues before committing."
  exit 1
fi

# Re-add formatted files to the commit
echo "Re-staging formatted files..."
git add -u

echo "✓ Pre-commit checks passed"

